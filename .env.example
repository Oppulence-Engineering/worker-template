# Application
NODE_ENV=development
SERVICE_NAME=graphile-worker-template
SERVICE_VERSION=1.0.0
ENVIRONMENT=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=graphile_worker
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false
DB_MAX_CONNECTIONS=10
DB_IDLE_TIMEOUT_MS=30000
DB_CONNECTION_TIMEOUT_MS=5000

# Graphile Worker Configuration
WORKER_CONCURRENCY=5
WORKER_POLL_INTERVAL=1000
WORKER_SCHEMA=graphile_worker
WORKER_NO_HANDLE_SIGNALS=false

# Graphile Migrate
DATABASE_URL=postgres://postgres:postgres@localhost:5432/graphile_worker
ROOT_DATABASE_URL=postgres://postgres:postgres@localhost:5432/postgres
SHADOW_DATABASE_URL=postgres://postgres:postgres@localhost:5432/graphile_worker_shadow

# PostGraphile API Configuration
GRAPHQL_ENABLED=false
GRAPHQL_PORT=5000
GRAPHQL_PATH=/graphql
GRAPHQL_SCHEMA=public
GRAPHQL_DEFAULT_ROLE=web_anon
GRAPHQL_GRAPHIQL=true
GRAPHQL_GRAPHIQL_ROUTE=/graphiql
GRAPHQL_WATCH=true
GRAPHQL_ENHANCE_GRAPHIQL=true
GRAPHQL_ENABLE_QUERY_BATCHING=true
GRAPHQL_LEGACY_RELATIONS=omit
GRAPHQL_JWT_SECRET=your-jwt-secret-change-in-production
GRAPHQL_JWT_TOKEN_IDENTIFIER=app.jwt_token

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=8080
HEALTH_CHECK_PATH=/health
HEALTH_READINESS_PATH=/health/ready
HEALTH_LIVENESS_PATH=/health/live

# Observability - Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Observability - Tracing
TRACING_ENABLED=true
OTLP_ENDPOINT=http://localhost:4317
TRACE_SAMPLE_RATE=1.0

# Observability - Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Redis (optional - for advanced features)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# SMTP (for email jobs example)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com

# External APIs (examples)
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3

# Security
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Feature Flags
ENABLE_GRAPHIQL=true
ENABLE_INTROSPECTION=true
ENABLE_DEBUG_MODE=false
