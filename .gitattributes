# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.ts text eol=lf
*.js text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Documentation
*.md text eol=lf
LICENSE text eol=lf

# Shell scripts
*.sh text eol=lf

# Docker
Dockerfile text eol=lf
.dockerignore text eol=lf

# Config files
.env.* text eol=lf
.editorconfig text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# SQL
*.sql text eol=lf

# Archives
*.zip binary
*.tar.gz binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text
